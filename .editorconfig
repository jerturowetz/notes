# editorconfig.org
root = true

# I'm pretty sure charset doesn't work yet in vscode
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{js,py}]
charset = utf-8
indent_style = space
indent_size = 4

[{.jshintrc,*.json,*.yml}]
indent_style = space
indent_size = 2

[*.{html,php}]
indent_style = tab
indent_size = 4

[{*.txt,wp-config-sample.php}]
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
